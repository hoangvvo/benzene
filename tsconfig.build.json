{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "ESNext",
    "target": "es2019",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "Node",
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"]
}
