{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "ESnext",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "Node"
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "packages/*/dist"
  ]
}