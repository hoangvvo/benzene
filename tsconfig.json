{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "ESNext",
    "target": "ESnext",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/*/dist"]
}